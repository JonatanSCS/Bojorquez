

body
	font-family sans-serif
	font-size 15px
	background #F2F2F2
	margin 0
	height 100%

ul
	list-style none
	//display block
a
	text-decoration none

	
header
	margin 0
	padding 0
	background #1F66C8
	text-align center
	width 63%
	margin-left 20%
	margin-right 20%
	
	
	.header-top
		border-collapse border-collapse
		width 100%
		tbody
			display table-row-group
			tr
				display table-row
				vertical-align inherit
			
				img
					width 90%
			.header-banner-td
				background #BBB
				.header-banner-image
					width 75%
	span
		font-size 25px
		color #FDE962
		text-shadow -1px 1px 2px #555
		line-height 50px
	span:hover
		text-decoration underline
	

	nav
		display block
		margin-left -25px
		
		ul
			padding-bottom 10px
			li
				display inline-block
				a
					display block
					padding 5px 20px
					border-radius 4px
					color #013968
					font-weight bold
					border 1px #013968
					background #c9e4ff
			
				.icon-a
					
					//display block
					padding 10px
					border-radius 4px
					color #013968
					
					border 1px #013968
					background #c9e4ff
				
					span
						font-weight bold
						border 1px #013968
						background #c9e4ff
						color #013968
						font-size 20px
						padding 0
						
						
				a:hover
					color #1F66C8
.info-image
	img
		width 90%
		height 170px

