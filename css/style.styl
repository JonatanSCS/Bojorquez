@import 'nib'
@import 'nib/gradients'

azul = #1f66c8
amarillo = #FDE962
azulF = #013968
azulC= #C9E4FF
gris = #668499

body
	background #EEE
	font-family Verdana, Geneva, sans-serif
	overflow-x hidden
	
	
a
	text-decoration none
ul 
	list-style none


header
	background azul
	box-shadow 2px 2px 3px 2px rgba(0,0,0,.3)
	z-index 1
	width 100%
	
	
	section 
		display inline-block
		width 100%
		
		
		.header-top
			
			width 80%
			margin-left 10%
			margin-right 10%
			height 130px
			padding-top 1%
			.logo-section
				
				width auto
			.banner-section
				width auto
				margin-left 10%
				img
					width 728px
					hight 90px
			.bojorquez-pagina
				text-align center
				h1
					
					color amarillo
					font-size 25px
					text-shadow -1px 1px 2px #555
					line-height 50px
					
					
		nav
			width 100%
			
			text-align center
			
			
			
			ul
				display inline-flex
				li
					margin-left 10px
					padding 5px 10px
					border-radius 7px
					background linear-gradient(top, white, azulC)
					
					box-shadow 1px 1px 3px 1px rgba(0,0,0,.3)
					a
						color azulF
						font-weight bold
.estados-section, .arte-section
	background azulC
	margin-top 15px
	padding 20px
	position absolute
	width 12%
	height 82%
	
	border-radius 10px
	
	h2
		text-align center
		color azulF
		text-shadow -1px 1px 2px #555
		font-size 1.5em	
	ul
		padding 0
		margin 0
		height 85%
		li
			margin 5px 0
			height 2.15%
			font-family Verdana
		
			a
				color gris
				font-size 13px
				
			a:hover
				color azulF
				font-size 14px
				
		
				

.estados-section
	
	margin-left 1%
	box-shadow 3px 3px 8px 3px rgba(0,0,0,.3)

.arte-section
	margin-left 84.5%
	margin-right .4%
	box-shadow -3px 3px 8px 3px rgba(0,0,0,.3)
	

	input
		background azulF
		border-radius 8px
		padding 10px
		border 1px solid #000
		width 90%
	span
		color azulC
		position absolute
		margin-top -28px
		margin-left 180px
		
	.banner-li
		height 60%					
		.banner-arte
			text-align center
			margin-top 10px
			padding-top 10px
			border-top 1px solid gris
			height 90%
			img 
				height 100%
				width 100%
			
					

.info-section
	width 64%
	
	text-align center
	margin-left 18%
	margin-top 30px
	padding-top 1%
	

	.tu-guia-util
		color #08088A
		font-size 50px
		font-family 'Rock Salt', cursive;
	
	.principal-image
		img
			width 100%
			height 200px
			margin-bottom 40px
		span
			position absolute
			margin-left -50%
			margin-top 40px
			color #ffffff
			font-size 25px
			opacity .5
			font-weight 100
			
		
	
	.videos-youtube
		float left
		width 27%
		height 100%
		margin-top -5px
		padding 10px
		
		
		
		iframe
			margin-bottom 10px
			float left
		
			

		
		
		
	.info-section-el
		text-align right
		width 75%
		margin-left 25%
		
		.info-section-elements
			text-align left
			width 30%
			height 450px
			display inline-block
			padding .5%
			
			
			img
			
				width 100%
				height 150px
				margin-bottom 30px
			h4
				text-align center
				a
					color #007C92
					font-size 15px
					font-weight 700
			p
	
				display table-cell
				color #444
				font-size 13px
				height 150px
				magin 0
				padding 0 5px
				vertical-align middle
				a
					color #007C92
					font-size 14px

		.info-section-elements:hover
			
			h4
				a
					
					color #002664
			img
				width 100%
				height 155px
				opacity .6
.galeria-section
	width 64%
	text-align center
	margin-left 18%
	margin-top 30px
	padding-top 1%
	height 100%
		
	.principal-image
		img
			width 100%
			height 200px
			margin-bottom 40px
		span
			position absolute
			margin-left -50%
			margin-top 40px
			color #ffffff
			font-size 25px
			opacity .5
			font-weight 100
	.galeria-section-videos
		.galeria-nav
			padding 10px
			
			h2 
				color azulF
				font-size 20px
				text-align left
				margin-left 20px
			ul
				
				width 97%
				li
					display inline-block
					margin-left 20px
					border-radius 10px
					margin-top 10px
					box-shadow 1px 1px 3px 1px rgba(0,0,0,.3)
					button
						outline 0
						border 0
						font-size 18px
						border-radius 10px
						

				li:hover
					button
						color azulF
				.first-li
					margin-left -30px
			
		.videos-galeria-section
			height 100%
			padding 1%
			
			.video-principal, .opciones-videos
				width 48%
				display inline-block
			
				verical-align middle
				
				iframe
					width 98%
					height 314px
					margin-top 7px
					
			.opciones-videos

				.video-section-elements
					width 30%
					height 193px
					display inline-block
					verical-align middle
					margin 0
					margin-left 6px
					margin-top -12px
					iframe
						width 100%
						height 50%
					span
						color gris 
						font-size 15px
					
				
				
			
				
footer
	
	text-align left
	margin-top 20px
	width auto
	
	text-align center
	background azul
	padding 10px
	padding-bottom 5%
	
	h3
		font-size 20px
		color white
		text-shadow -1px 1px 2px black
		text-align left
		margin-left 20%
	ul
		display block
		text-align center
		width 100%
		
		li
			display inline-block
			margin 8px 0 8px 15px
			padding-right 20px
			a
				color amarillo
				font-weight bold
				font-style normal
			a:hover
				color white
	
	.parrafo-footer
		text-align center
		width 60%
		margin-left 20%
	
		p
			font-size 12px
			color white
			font-style italic
		span
			font-size 12px
			color white
			float right
			a
				font-size 14px
				color amarillo
				font-weight bold
			a:hover
				color white








	