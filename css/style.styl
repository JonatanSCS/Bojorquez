@import 'nib/vendor'
@import 'nib/gradients'

vendor-prefixes = 0 ms moz webkit official
body
	margin 0
	padding 0
	background #E5EEFB
	font-family 'Roboto', sans-serif
li
	list-style none
a
	text-decoration none
	
	

header
	
	text-align center
	margin-top 20px
	
	.header-banner
		display block
		img
			width 60%
			height 100px
			
			
	.header-nav
		display inline-block
		width 60%
		background linear-gradient(right,#01A9DB, #08088A)
		
		
		
		.logo-image
			position absolute
			vertical-align middle
			margin-top .5%
			margin-left .5%
		
			height 80px

			img
				width 60%
				height 60px
				vertical-align middle
				
				
			
		h1
			a
				color #ffffff
				font-size 25px

		ul
			
			display block
			li
				display inline-block
				
				margin 1%
				float right
				a
					color #fff
					
			li:hover
				

				a
					color #A9F5F2	
.info-section
	width 60%
	background #E0EEFB
	text-align center
	margin-left 20%
	margin-top 30px
	padding-top 1%
	

	.tu-guia-util
		color #08088A
		font-size 50px
		font-family 'Rock Salt', cursive;
	
	.principal-image
		img
			width 90%
			height 200px
			margin-bottom 40px
		span
			position absolute
			margin-left -50%
			margin-top 40px
			color #ffffff
			font-size 25px
			opacity .5
			font-weight 100
			
		
	
	.videos-youtube
		float left
		width 27%
		height 100%
		margin-top -5px
		padding 10px
		vertical-align middle
		
		iframe
			margin-bottom 10px

		
		
		
	.info-section-el
		text-align right
		width 70%
		margin-left 30%
		background #fff
		.info-section-elements
			text-align left
			width 30%
			height 450px
			display inline-block
			padding .5%
			border-bottom 1px solid #E7ECF8
			border-right 1px solid #E7ECF8
			
			img
			
				width 100%
				height 200px
				margin-bottom 30px
			h4
				a
					color #007C92
					font-size 15px
					font-weight 700
			p
	
				display table-cell
				color #444
				font-size 13px
				height 150px
				magin 0
				padding 0 5px
				vertical-align middle
				a
					color #007C92
					font-size 14px

		.info-section-elements:hover
			
			h4
				a
					
					color #002664
			img
				width 100%
				height 205px
				opacity .6
			
				
				

				
.estados-section-fixed
	position fixed
	width 17%
	height 100%
	margin .5%
	padding 1%
	margin-top -240px
	h2
		background linear-gradient(right,#01A9DB, #A9F5F2)
		color #002664
		font-size 23px
		padding 5%
		
	
	ul
		height 80%
		position fixed
		
		li
			height 3.1%
			a
				color #007C92
		li:hover
			a
				color #002664
				font-size 17px

.arte-cultura-section-fixed
	position fixed
	width 17%
	height 100%
	margin .5% .5% .5% 80%
	padding 1%
	margin-top -240px
	
	
	h2
		background linear-gradient(right,#A9F5F2, #01A9DB)
		color #002664
		font-size 23px
		padding 5%
	input
		border 2px solid #01A9DB
		padding 5px
		width 80%
		background #E5EEFB
	.icon-search-section
		position absolute
		margin-top -24px
		margin-left 68%
		font-size 20px	
		.icon-search
			color #002664
		
	
	ul
		height 80%
		position fixed
		
		li
			height 5%
			a
				color #007C92
		li:hover
			a
				color #002664
				font-size 17px
			
			

footer
	
	text-align left
	margin-top 20px
	width 60%
	margin-left 20%
	padding-bottom 5%
	h3
		color #002664
	ul
		
		display block
		li
			display inline-block
			margin-right 3%
			border-radius 50px
			padding 3px 10px 3px 10px
			background #E6E6E6
			border 2px solid #BDBDBD
			a
				color #6E6E6E
				font-size 15px
		li:hover
			background #BDBDBD

	p
		color #007C92
	span 
		color #007C92
		float right
		margin-top 20px
		font-size 12px
		a
			color #48A4FF
			font-weight 900
		a:hover
			color #0431B4		
	





				
				
	
	
	